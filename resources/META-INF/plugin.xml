<idea-plugin>
    <id>com.command.arthas.idea.plugin</id>
    <name>arthas idea</name>
    <version>1.2</version>
    <vendor email="983433479@qq.com" url="https://github.com/WangJi92/arthas-idea-plugin">汪小哥</vendor>

    <description><![CDATA[
     <tag> arthas 辅助工具类</tag>
      <ul>
        <li>支持arthas 工具，可以直接trace、watch、ognl static，ognl bean method</li>
      </ul>
    ]]></description>

    <change-notes><![CDATA[
      <ul>
        <li>v1.0 支持arthas 工具，可以直接trace、watch、ognl static，ognl bean method</li>
        <li>v1.2 修改双屏dialog bug,增加帮助链接</li>
      </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>


    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable dynamic="false" instance="com.command.idea.plugin.ui.SettingDialog"/>
    </extensions>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <!-- Add your actions here -->

        <action id="ArthasSc" class="com.command.idea.plugin.Action.arthas.ArthasScCommandAction" text="Sc"
                description="Arthas get classload">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke=" ctrlshift alt S"/>-->
        </action>
        <action id="ArthasWatch" class="com.command.idea.plugin.Action.arthas.ArthasWatchCommandAction" text="Watch"
                description=" Arthas watch">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke=" ctrl shift alt W"/>-->
        </action>
        <action id="ArthasTrace" class="com.command.idea.plugin.Action.arthas.ArthasTraceCommandAction" text="Trace"
                description="Arthas trace">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt T"/>-->

        </action>
        <action id="ArthasStatic" class="com.command.idea.plugin.Action.arthas.ArthasOgnlStaticCommandAction"
                text="Static Ognl"
                description="Arthas ognl static">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt T"/>-->

        </action>

        <action id="ArthasSpecial" class="com.command.idea.plugin.Action.arthas.ArthasSpecialCommandAction"
                text="Arthas Special Use Link"
                description="Arthas special use link">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt T"/>-->

        </action>

        <action id="ArthasInvokeBeanMethod"
                class="com.command.idea.plugin.Action.arthas.ArthasOgnlSpringContextInvokeMethodAction"
                text="Invoke BeanMethod"
                description="Arthas invoke bean method">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt T"/>-->

        </action>

        <action id="ArthasInstallCommand" class="com.command.idea.plugin.Action.arthas.ArthasInstallCommandAction"
                text="Install"
                description="Arthas install shell">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt T"/>-->

        </action>

        <action id="ArthasHelpCommand" class="com.command.idea.plugin.Action.arthas.HelpAction"
                text="Arthas Idea Help"
                description="Arthas idea help">
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt T"/>-->

        </action>


        <group id="arthas-plugin" popup="true" text="Arthas Command">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="CopyReference"/>
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <reference ref="ArthasWatch"/>
            <reference ref="ArthasTrace"/>
            <reference ref="ArthasStatic"/>
            <reference ref="ArthasInvokeBeanMethod"/>
            <reference ref="ArthasSc"/>

            <separator/>
            <reference ref="ArthasInstallCommand"/>
            <reference ref="ArthasSpecial"/>
            <separator/>
            <reference ref="ArthasHelpCommand"/>

        </group>
    </actions>

</idea-plugin>